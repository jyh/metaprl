OCAMLINCLUDES += $(addprefix -I , $(SUPPORT_DIRS))

# Common files
MLZFILES =\
    base_theory

# Library files
MPFILES =\
    base_trivial\
    base_meta\
    base_rewrite\
    base_theory

Theory($(MPFILES))

#
# Documentation
#
PRINT_THEORIES =\
    base_theory\
    $(SUPPORT)/tactics/top_tacticals\
    $(SUPPORT)/tactics/top_conversionals\
    $(SUPPORT)/tactics/var\
    $(SUPPORT)/tactics/auto_tactic\
    $(SUPPORT)/tactics/dtactic\
    base_trivial\
    base_rewrite\
    $(SUPPORT)/display/summary\
    $(SUPPORT)/display/comment\
    $(SUPPORT)/shell/mptop

TheoryDocumentInstall(base, $(PRINT_THEORIES))

#
# Clean up
#
clean:
    $(CLEAN) theory.tex theory-body.tex theory_print.ml

all: theory$(LIB_SUFFIX)
