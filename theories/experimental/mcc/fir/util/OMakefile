#
# Include directories
#
OCAMLINCLUDES =\
	-I .\
	-I $(MCC)/fir/type\
	-I $(ROOT)/support/display\
	-I $(ROOT)/support/shell\
	-I $(ROOT)/support/tactics\
	-I $(ROOT)/theories/ocaml\
	-I $(ROOT)/theories/base\
	-I $(LIBMOJAVE)/naml/stdlib\
	-I $(LIBMOJAVE)/util

#
# Library files
#
MPFILES =\
	m_prec\
	m_int\
	m_rawint\
	m_rawfloat\
	m_set\
	m_fir\
	m_fir_term

#
# At least m_fir_term needs to be compiled with -rectypes
#
OCAMLFLAGS += -rectypes

#
# Build the theory
#
Theory($(MPFILES))

#
# Clean up
#
clean:
    $(CLEAN)

realclean:
    $(REALCLEAN)

all: theory$(LIB_SUFFIX)
