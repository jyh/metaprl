OCAMLINCLUDES += $(SUPPORT_DIRS)
THEORYNAME = base-extensions
THEORYDESCR = Basic Meta-Theory Extensiions

THEORY_DEPS[] = base

# Common files
MLZFILES[] =
    meta_extensions_theory

# Library files
MPFILES[] =
    meta_util
    meta_dtactic
    meta_implies
    meta_context_terms
    meta_extensions_theory

Theory($(MPFILES))

#
# Documentation
#
PRINT_THEORIES[] =
    meta_dtactic
    meta_implies
    meta_context_terms

TheoryDocumentInstall(base-extensions, $(PRINT_THEORIES))

#
# Clean up
#
clean:
    $(CLEAN) theory.tex theory-body.tex theory_print.ml

all: theory$(LIB_SUFFIX)
