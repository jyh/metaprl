#
# Import environment
#

Import qw( env );


#
# Set up file lists.
#

my @src =
   qw(   auto option bool token record int list int_set
         ty exp util sequent
         tr_base tr_types tr_atom_base tr_atom tr_store tr_exp
         termOp_base termOp
         connect_base connect_ty connect_exp
         test );


#
# Set up file lists and build everything.
#

OCamlSources $env (map "mfir_$_.ml", @src), 'mfir_theory.mlz';
OCamlLibrary $env 'base', (map "mfir_$_", @src), 'mfir_theory';


#
# Default target to build.
#
#Default( "base$env->{SUFLIB}" );
