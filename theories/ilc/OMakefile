THEORYNAME = ilc
THEORYDESCR = $"ILC: A Froundation for Automated Reasoning About Pointer Programs"

THEORY_DEPS[] +=
    itt/core

# MetaPRL "theory" files.
MPFILES[] =
    ilc_core
    ilc_term
    ilc_extend
    ilc_listtest1
    ilc_test
    ilc_listtest
    ilc_mergesort
    ilc_longmergesort

Theory($(MPFILES))

#
# Documentation
#
LocalTeXGeneratedFiles(ilc.tex ilc-body.tex)
TheoryDocument(ilc, $(MPFILES))
LaTeXDocumentInstall(tex doc, $(DOCDIR), ilc, ilc, ilc-body)

#
# Clean up
#
clean:
    $(CLEAN) ilc.tex ilc-body.tex ilc_print.ml

all: theory$(LIB_SUFFIX)
