THEORYNAME = itt
THEORYDESCR = Computational Type Theory

MLZFILES =

DIRS[] =
    core
    extensions
    applications
    reflection

if $(TESTS_ENABLED)
    DIRS[] += tests
    export

ITT_FILES[] =

.SUBDIRS: $(DIRS)
    include OMakefile
    ITT_FILES[] += $(file $(MPFILES))
    export ITT_FILES

MPFILES[] = $(ITT_FILES)

Theory($(MPFILES))

