THEORYNAME = itt_extensions
THEORYDESCR = Extensions to Computational Type Theory (Some are Experimental)

DIRS[] =
    rfun

EXT_FILES[] =

.SUBDIRS: $(DIRS)
    include OMakefile
    EXT_FILES += $(file $(MPFILES))
    export EXT_FILES

OCAMLINCLUDES[] +=
   $(SUPPORT_DIRS)
   ../../base
   ../core

# Library files
MPFILES[] =
   itt_eta
   itt_pairwise
   itt_pairwise2
   itt_antiquotient
   ctt_markov
   $(EXT_FILES)

Theory($(MPFILES))

#
# Clean up
#
clean:
    $(CLEAN)

all: theory$(LIB_SUFFIX)
