THEORYNAME = meta
THEORYDESCR = Basic Meta-Theory

MLZFILES =

DIRS[] =
    base
    extensions

VirtualTheory($(DIRS))

#
# Documentation
#
PRINT_THEORIES[] =
    base/base_theory
    $(SUPPORT)/tactics/top_tacticals
    $(SUPPORT)/tactics/top_conversionals
    $(SUPPORT)/tactics/var
    $(SUPPORT)/tactics/auto_tactic
    $(SUPPORT)/tactics/dtactic
    base/base_trivial
    base/base_rewrite
    $(SUPPORT)/display/summary
    $(SUPPORT)/display/comment
    $(SUPPORT)/shell/mptop
    extensions/meta_dtactic
    extensions/meta_struct
    extensions/meta_implies
    extensions/meta_context_terms
    extensions/meta_context_ind1

TheoryDocumentInstall(meta, $(PRINT_THEORIES))

#
# Clean up
#
clean:
    $(CLEAN) theory.tex theory-body.tex theory_print.ml

all: theory$(LIB_SUFFIX)
