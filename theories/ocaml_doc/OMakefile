THEORYNAME = ocaml_doc
THEORYDESCR = "Introduction to OCaml" Book

OCAMLINCLUDES[] +=
	$(SUPPORT_DIRS)
	../base

# Common files
MLZFILES =

# Library files
MPFILES =\
	ocaml_doc_intro\
	ocaml_doc_expr1\
	ocaml_doc_var1\
	ocaml_doc_patt1\
	ocaml_doc_expr2\
	ocaml_doc_expr3\
	ocaml_doc_exn1\
	ocaml_doc_expr4\
	ocaml_doc_io1\
	ocaml_doc_mod1\
	ocaml_doc_mod2\
	ocaml_doc_class1

Theory($(MPFILES))

#
# Generate the document
#
PRINT_THEORIES =\
    ocaml_doc_intro\
    ocaml_doc_expr1\
    ocaml_doc_var1\
    ocaml_doc_patt1\
    ocaml_doc_expr2\
    ocaml_doc_expr3\
    ocaml_doc_exn1\
    ocaml_doc_expr4\
    ocaml_doc_io1\
    ocaml_doc_mod1\
    ocaml_doc_mod2\
    ocaml_doc_class1

TheoryDocument(theory, $(PRINT_THEORIES))
LaTeXDocumentInstall(tex doc, $(DOCDIR), ocaml-book, book2, theory-body)

#
# Clean up
#
clean:
    $(CLEAN) theory.tex theory-body.tex theory_print.ml

all: theory$(LIB_SUFFIX)
