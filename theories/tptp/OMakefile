OCAMLINCLUDES +=\
	$(addprefix -I , $(SUPPORT_DIRS))\
	-I ../itt\
	-I ../base

MLZFILES =\
	tptp_type\
	tptp_parse

# Library files
LMFILES =\
	tptp_type\
	tptp_parse\
	tptp_lex

#
# Ocamldep usually forgests this dependency
#
tptp_lex.cmi: tptp_parse.cmi

OCamlLibrary(tptp, $(LMFILES))

MPFILES =\
	tptp\
	tptp_load\
	tptp_cache\
	tptp_prove

Theory($(MPFILES))

#
# Clean up
#
clean:
    $(CLEAN)

all: theory$(LIB_SUFFIX)
